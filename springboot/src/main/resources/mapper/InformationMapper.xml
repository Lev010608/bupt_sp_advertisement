<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.InformationMapper">

    <sql id="Base_Column_List">
        id,name,img,addTime,recommend,user_id,status,descr,content,file,tag
    </sql>

    <select id="selectAll" resultType="com.example.entity.Information">
        select information.*, user.name as userName
        from information
        left join user on information.user_id = user.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and information.name like concat('%', #{name}, '%')</if>
            <if test="userId != null"> and user_id = #{userId}</if>
        </where>
        order by id desc
    </select>

    <select id="selectApproved" resultType="com.example.entity.Information">
        select information.*, user.name as userName
        from information
        left join user on information.user_id = user.id
        <where>
            status = '审核通过'
            <if test="name != null and name != ''">
                AND information.name like concat('%', #{name}, '%')
            </if>
            <if test="tag != null and tag != ''">
                AND information.tag = #{tag}
            </if>
        </where>
        order by addTime desc
    </select>

    <select id="selectRecommendedApproved" resultType="com.example.entity.Information">
        select information.*, user.name as userName
        from information
        left join user on information.user_id = user.id
        <where>
            information.status = '审核通过' and information.recommend = '是'
        </where>
        order by information.addTime desc
    </select>




    <select id="selectById" resultType="com.example.entity.Information">
        select
        <include refid="Base_Column_List" />
        from information
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from information
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Information" useGeneratedKeys="true">
        insert into information
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="img != null">img,</if>
            <if test="addTime != null">addTime,</if>
            <if test="recommend != null">recommend,</if>
            <if test="userId != null">user_id,</if>
            <if test="status != null">status,</if>
            <if test="descr != null">descr,</if>
            <if test="content != null">content,</if>
            <if test="file != null">file,</if>
            <if test="tag != null">tag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="img != null">#{img},</if>
            <if test="addTime != null">#{addTime},</if>
            <if test="recommend != null">#{recommend},</if>
            <if test="userId != null">#{userId},</if>
            <if test="status != null">#{status},</if>
            <if test="descr != null">#{descr},</if>
            <if test="content != null">#{content},</if>
            <if test="file != null">#{file},</if>
            <if test="tag != null">#{tag},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Information">
        update information
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="addTime != null">
                addTime = #{addTime},
            </if>
            <if test="recommend != null">
                recommend = #{recommend},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="descr != null">
                descr = #{descr},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="file != null">
                file = #{file},
            </if>
            <if test="tag != null">
                tag = #{tag},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>