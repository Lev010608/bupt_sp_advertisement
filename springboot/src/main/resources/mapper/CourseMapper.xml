<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CourseMapper">

    <sql id="Base_Column_List">
        id,img,name,content,type,video,file,recommend,recommendTime,addTime,channel,channelRecommend
    </sql>

    <select id="selectAll" resultType="com.example.entity.Course">
        select
        <include refid="Base_Column_List" />
        from course
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="recommend != null"> and recommend= #{recommend}</if>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Course">
        select
        <include refid="Base_Column_List" />
        from course
        where id = #{id}
    </select>

    <select id="selectByType" resultType="com.example.entity.Course">
        SELECT
        <include refid="Base_Column_List" />
        FROM course
        WHERE type = #{type}
        ORDER BY addTime DESC
    </select>

    <select id="selectByChannelName" resultType="com.example.entity.Course">
        select
        <include refid="Base_Column_List" />
        from course
        <where>
            channel is not null
        </where>
        order by channel
    </select>
    <select id="selectByChannel" resultType="com.example.entity.Course">
        select
        <include refid="Base_Column_List" />
        from course
        where channel = #{channel}
        order by addTime desc  <!-- 或根据你的需求进行排序 -->
    </select>
    <select id="getRecommendedChannels" resultType="java.lang.String">
        SELECT DISTINCT channel
        FROM course
        WHERE channelRecommend = '1'
    </select>
    <select id="getRecommendedChannelsWithLatestCourse" resultType="com.example.entity.Course">
        SELECT c.* FROM course c
                            INNER JOIN (
            SELECT channel, MAX(id) AS latest_id
            FROM course
            WHERE channelRecommend = '1' AND channel IS NOT NULL
            GROUP BY channel
        ) lc ON c.channel = lc.channel AND c.id = lc.latest_id
        WHERE c.channel IS NOT NULL AND c.channel != ''
    </select>




    <delete id="deleteById">
        delete from course
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Course" useGeneratedKeys="true">
        insert into course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="img != null">img,</if>
            <if test="name != null">name,</if>
            <if test="content != null">content,</if>
            <if test="type != null">type,</if>
            <if test="video != null">video,</if>
            <if test="file != null">file,</if>
            <if test="recommend != null">recommend,</if>
            <if test="recommendTime != null">recommendTime,</if>
            <if test="addTime != null">addTime,</if>
            <if test="channel != null">channel,</if>
            channelRecommend
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="img != null">#{img},</if>
            <if test="name != null">#{name},</if>
            <if test="content != null">#{content},</if>
            <if test="type != null">#{type},</if>
            <if test="video != null">#{video},</if>
            <if test="file != null">#{file},</if>
            <if test="recommend != null">#{recommend},</if>
            <if test="recommendTime != null">#{recommendTime},</if>
            <if test="addTime != null">#{addTime},</if>
            <if test="channel != null">#{channel},</if>
            #{channelRecommend}
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Course">
        update course
        <set>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="video != null">
                video = #{video},
            </if>
            <if test="file != null">
                file = #{file},
            </if>
            <if test="recommend != null">
                recommend = #{recommend},
            </if>
            <if test="recommendTime != null">
                recommendTime = #{recommendTime},
            </if>
            <if test="addTime != null">
                addTime = #{addTime},
            </if>
            <if test="channel != null">
                channel = #{channel},
            </if>
            channelRecommend = #{channelRecommend}
        </set>
        where id = #{id}
    </update>

    <update id="updateChannelRecommend">
        UPDATE course
        SET channelRecommend = CASE WHEN #{channelRecommend} = true THEN '1' ELSE NULL END
        WHERE channel = #{channel}
    </update>



</mapper>